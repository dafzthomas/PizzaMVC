@using PizzaWebSite.Models.PizzaCart

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.OrderTotal = 0;
}

<div class="jumbotron">
    <h1>Pizza Website</h1>
    <p class="lead">Cart!</p>
</div>

<div class="row">
    <div class="col-md-10">
        <h2>Cart</h2>

        @if (ViewBag.OrderItems != null)
        {
            foreach (Pizza orderItem in ViewBag.Pizzas)
            {
                ViewBag.OrderTotal += orderItem.Price;

                <ul>
                    <li>@orderItem.Name</li>
                    <li>@orderItem.Size</li>
                    <li>£@orderItem.Price</li>
                </ul>
                using (Html.BeginForm("Remove", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {

                    @Html.AntiForgeryToken()

                    <input type="hidden" name="Pizza" value="@orderItem" />
                    <input type="submit" value="Remove" class="btn btn-default" />
                }
            }

            <h3>£@ViewBag.OrderTotal</h3>

            @Html.ActionLink("Continue", "Confirm");
        }





    </div>
</div>
